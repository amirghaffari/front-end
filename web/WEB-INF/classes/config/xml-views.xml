    <bean id="authors_submission_wizard_last_redirect" 
       class="org.springframework.web.servlet.view.RedirectView">
        <property name="url" value="/authors/submission/wizard/last" />
        <property name="contextRelative"  value="true" />
    </bean>

</beans>
